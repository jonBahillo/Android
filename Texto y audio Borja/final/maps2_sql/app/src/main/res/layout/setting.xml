<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="340dp"
    android:layout_height="600dp"
    android:background="@drawable/circulopopupsettings"
    android:padding="5dp"

    android:layout_gravity="center"
    >

    <TextView
        android:id="@+id/txtCerrar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:text="@string/x"
        android:textColor="@color/negro"
        android:textStyle="bold"
        android:layout_gravity="end"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/circulo"/>

        <Button
            android:id="@+id/btnberriarazi"
            android:layout_width="200dp"
            android:layout_height="49dp"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="67dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/botonse"
            android:text="@string/berriarazi"
            android:textColor="@color/blanco"
            android:textSize="18sp"
            android:layout_marginBottom="25dp"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="49dp"
        android:gravity="center"
        android:layout_marginLeft="67dp"
        android:textSize="18sp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center_vertical"
        android:text="@string/Textua" />

    <RadioGroup
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginLeft="67dp"
        android:layout_gravity="center_vertical">

        <RadioButton
            android:id="@+id/radioButton"
            android:textSize="18sp"
            android:layout_marginBottom="5dp"
            android:text="@string/Handia"/>

        <RadioButton
            android:id="@+id/radioButton2"
            android:textSize="18sp"
            android:text="@string/Txikia"
           />
    </RadioGroup>

    <Button
        android:id="@+id/btnGaleria"
        android:layout_width="200dp"
        android:layout_height="49dp"
        android:layout_marginLeft="67dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/botonse"
        android:text="@string/Galeria"
        android:textColor="@color/blanco"
        android:textSize="18sp"
        android:layout_marginBottom="35dp"
        />

    <Button
        android:id="@+id/btnsalir"
        android:layout_width="200dp"
        android:layout_height="49dp"
        android:layout_marginLeft="67dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/botonse"
        android:text="@string/Irten"
        android:textColor="@color/blanco"
        android:textSize="18sp"
        />
</LinearLayout>