<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TextoAudio"
    android:orientation="vertical">


  <!--  <Button
        android:id="@+id/aurrera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/siguiente" />-->

    <LinearLayout
        android:id="@+id/Fondoimagen"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:background="@drawable/santaana"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/sapo"
            android:layout_width="120dp"
            android:layout_height="136dp"
            android:layout_gravity="bottom"
            android:layout_weight="0"
            app:srcCompat="@drawable/kalebarria" />

        <TextView
            android:id="@+id/txtSig"
            android:layout_width="101dp"
            android:layout_height="34dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="135dp"
            android:layout_marginBottom="3dp"
            android:layout_weight="0"
            android:background="@drawable/boton"
            android:padding="5dp"
            android:text="@string/siguiente"
            android:textAlignment="center" />
    </LinearLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/azul">

        <ImageView
            android:id="@+id/imgCambiartexto2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/flecha_iz" />

        <ImageView
            android:id="@+id/imgCambiartexto"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/flecha_iz" />

        <TextView
            android:id="@+id/txtHistoria"
            android:layout_width="0dp"
            android:layout_height="167dp"
            android:background="@drawable/recuadro_texto"
            android:padding="10dp"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </android.support.constraint.ConstraintLayout>

</LinearLayout>